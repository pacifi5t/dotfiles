{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "background": "transparent",
                    "foreground": "lightCyan",
                    "properties": {
                        "style": "powerlevel",
                        "max_width": 32
                    },
                    "template": "{{.Path}} "
                },
                {
                    "type": "git",
                    "style": "plain",
                    "background": "transparent",
                    "foreground": "green",
                    "properties": {
                        "fetch_status": true,
                        "branch_max_length": 24
                    },
                    "templates": [
                        // FIXME: merge, rebase, cherry pick and revert are not supported
                        "{{if not .Detached}}{{.Ref}}{{else}}{{if matchP .Ref \"(detached)\"}}@{{trunc 7 .Commit.Sha}}{{else}}#{{.Ref}}{{end}}{{end}} ",
                        "{{if .Behind}}↓{{.Behind}} {{end}}{{if .Ahead}}↑{{.Ahead}} {{end}}{{if .StashCount}}*{{.StashCount}} {{end}}",
                        "{{if .Staging.Changed}}<lightGreen>+{{add .Staging.Modified .Staging.Added .Staging.Deleted}}</> {{end}}",
                        "{{if .Working.Modified}}<lightYellow>~{{.Working.Modified}}</> {{end}}",
                        "{{if .Working.Deleted}}<lightRed>-{{.Working.Deleted}}</> {{end}}",
                        "{{if .Working.Untracked}}<lightBlue>?{{.Working.Untracked}}</> {{end}}"
                    ]
                },
                {
                    "type": "status",
                    "style": "plain",
                    "background": "transparent",
                    "foreground_templates": [
                        "{{if .Error}}lightRed{{else}}lightGreen{{end}}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "template": ">> "
                }
            ]
        },
        {
            "type": "rprompt",
            "alignment": "left",
            "overflow": "hidden",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "background": "transparent",
                    "foreground": "cyan",
                    "template": "{{if .SSHSession}}{{.UserName}}@{{.HostName}}{{ end }}"
                }
            ]
        }
    ],
    "secondary_prompt": {
        "background": "transparent",
        "foreground": "yellow",
        "template": ">>> "
    }
}