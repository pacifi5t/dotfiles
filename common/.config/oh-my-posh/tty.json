{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "lightCyan",
                    "properties": {
                        "style": "full"
                    },
                    "template": "{{.Path}} "
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "green",
                    "properties": {
                        "fetch_status": true,
                        "branch_icon": "",
                        "commit_icon": "<white>@</>",
                        "tag_icon": "<white>#</>"
                    },
                    "templates": [
                        "{{ replaceP \" ?detached at ?\" .HEAD \"\" }} ",
                        "{{if .Behind}}↓{{.Behind}} {{end}}{{if .Ahead}}↑{{.Ahead}} {{end}}{{if .StashCount}}*{{.StashCount}} {{end}}",
                        "{{if .Staging.Changed}}<lightGreen>+{{add .Staging.Modified .Staging.Added .Staging.Deleted}}</> {{end}}",
                        "{{if .Working.Modified}}<lightYellow>~{{.Working.Modified}}</> {{end}}",
                        "{{if .Working.Deleted}}<lightRed>-{{.Working.Deleted}}</> {{end}}",
                        "{{if .Working.Untracked}}<lightBlue>?{{.Working.Untracked}}</> {{end}}"
                    ]
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "cyan",
                    "template": "{{if .SSHSession}}{{.UserName}}@{{.HostName}}{{ end }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground_templates": [
                        "{{if .Error}}lightRed{{else}}lightGreen{{end}}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "template": ">> "
                }
            ]
        },
        {
            "type": "rprompt",
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "plain",
                    "properties": {
                        "threshold": 5000
                    },
                    "templates": [
                        "{{$S := (div .Ms 1000)}}{{if ge $S 3600}}{{div $S 3600}}h {{end}}",
                        "{{$S := (div .Ms 1000)}}{{$rem := (mod $S 3600)}}{{if ge $S 60}}{{div $rem 60}}m {{end}}{{mod $rem 60}}s"
                    ]
                }
            ]
        }
    ],
    "secondary_prompt": {
        "foreground": "yellow",
        "template": ">>   "
    }
}