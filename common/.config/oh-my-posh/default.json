{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "palette": {
        "lightRed": "#F05050",
        "red": "#FF0000",
        "lightOrange": "#FF8050",
        "orange": "#F64D26",
        "biscue": "#ffe4c4",
        "lightYellow": "#FCEA5F",
        "yellow": "#FDD448",
        "lightGreen": "#A0F050",
        "green": "#5ED600",
        "nodeGreen": "#4f9944",
        "celeste": "#87CEEB",
        "skyBlue": "#80B0FF",
        "lightBlue": "#00AEFF",
        "dimBlue": "#0086AE"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "white",
                    "template": "{{.Icon}} "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "p:lightBlue",
                    "properties": {
                        "edge_format": "<b>%s</b>",
                        "folder_format": "<p:dimBlue>%s</>",
                        "style": "full"
                    },
                    "template": "{{if matchP .Path \"~\"}}{{else}}{{if .Writable}}{{else}}{{end}}{{end}} {{.Path}} "
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "p:lightOrange",
                    "properties": {
                        "fetch_status": true,
                        "branch_icon": " ",
                        "commit_icon": "󰜘",
                        "tag_icon": "󰓹 "
                    },
                    "templates": [
                        "{{ replaceP \"? ?detached at ?\" .HEAD \"\" }} ",
                        "{{if .Behind}}{{.Behind}} {{end}}{{if .Ahead}}{{.Ahead}} {{end}}{{if .StashCount}}󰆦{{.StashCount}} {{end}}",
                        "{{if .Staging.Changed}}<p:lightGreen>+{{add .Staging.Modified .Staging.Added .Staging.Deleted}}</> {{end}}",
                        "{{if .Working.Modified}}<lightYellow>~{{.Working.Modified}}</> {{end}}",
                        "{{if .Working.Deleted}}<p:lightRed>-{{.Working.Deleted}}</> {{end}}",
                        "{{if .Working.Untracked}}<p:skyBlue>?{{.Working.Untracked}}</> {{end}}"
                    ]
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "rust",
                    "style": "plain",
                    "foreground": "p:orange",
                    "properties": {
                        "display_mode": "context"
                    },
                    "templates_logic": "first_match",
                    "templates": [
                        "{{if .Error}}<p:red> {{.Error}}</>{{end}}",
                        "{{if .Prerelease}} {{.Prerelease}}{{end}} {{.Full}}"
                    ]
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "p:yellow",
                    "properties": {
                        "display_mode": "context"
                    },
                    "templates_logic": "first_match",
                    "templates": [
                        "{{if .Error}}<p:red>  {{.Error}}</>{{end}}",
                        " {{if .Venv}} {{.Venv}}{{end}} {{.Full}}"
                    ]
                },
                {
                    "type": "node",
                    "style": "plain",
                    "foreground": "p:nodeGreen",
                    "properties": {
                        "display_mode": "context"
                    },
                    "templates_logic": "first_match",
                    "templates": [
                        "{{if .Error}}<p:red>  {{.Error}}</>{{end}}",
                        "  {{.Full}}"
                    ]
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "p:celeste",
                    "template": "{{if .SSHSession}}  <b>{{.UserName}}</b>  {{.HostName}}{{ end }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground_templates": [
                        "{{if .Error}}p:red{{else}}p:green{{end}}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "template": "❯❯ "
                }
            ]
        },
        {
            "type": "rprompt",
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "p:biscue",
                    "properties": {
                        "threshold": 5000
                    },
                    "templates": [
                        "󱦟 {{$S := (div .Ms 1000)}}{{if ge $S 3600}}{{div $S 3600}}h {{end}}",
                        "{{$S := (div .Ms 1000)}}{{$rem := (mod $S 3600)}}{{if ge $S 60}}{{div $rem 60}}m {{end}}{{mod $rem 60}}s"
                    ]
                }
            ]
        }
    ],
    "secondary_prompt": {
        "foreground": "yellow",
        "template": "❯❯   "
    }
}